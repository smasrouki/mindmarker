{% extends 'base.html.twig' %}

{% block body %}
    <h1>TaskList</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ taskList.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ taskList.title }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ taskList.color }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ taskList.number }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tasklist_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tasklist_edit', { 'id': taskList.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
