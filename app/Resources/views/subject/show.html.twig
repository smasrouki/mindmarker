{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <a id="add-content" class="btn btn-xs btn-default pull-right" href="#">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </a>
        </div>
        <hr>
    </div>
    <div class="row">
        <div id="first-block" class="col-md-12 node-list lobipanel-parent-sortable">
            <!-- panel-warning panel-danger panel-success panel-info-->
            <div class="panel panel-default prototype" style="display: none">
                <div class="panel-heading">
                    <div class="panel-title">
                        <h4>...</h4>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="content-value">
                        <a class="btn btn-xs btn-default pull-right edit-content">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                    </div>
                </div>
            </div>
            {% for content in firstBlock %}
                {% include 'content/_show.html.twig'%}
            {% endfor %}
        </div>
        <div id="left-block" class="col-md-6 node-list lobilist lobipanel-parent-sortable">
            {% for content in leftBlock %}
                {% include 'content/_show.html.twig'%}
            {% endfor %}
        </div>
        <div id="right-block" class="col-md-6 node-list lobilist lobipanel-parent-sortable">
            {% for content in rightBlock %}
                {% include 'content/_show.html.twig'%}
            {% endfor %}
        </div>
    </div>
{% endblock %}
