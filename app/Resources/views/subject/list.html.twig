<h4>{{ 'subject.list.title'|trans }}</h4>

<div class="panel panel-default">
    <div class="panel-body">
        <form class="form-inline">
            <div class="form-group">
                <input type="email" class="form-control" id="exampleInputEmail2" placeholder="{{ 'subject.list.new'|trans }}">
            </div>
            <button type="submit" class="btn btn-default">{{ 'subject.list.create'|trans }}</button>
        </form>
    </div>
</div>



<div id="tree"></div>

